{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "env": {
                "VIRTUAL_ENV": "${workspaceFolder}/.venv",
                "PATH": "${workspaceFolder}/.venv/bin:${env:PATH}"
            }
        },
        {
            "name": "Python with uv: Current File",
            "type": "debugpy",
            "request": "launch",
            "module": "uv.run",
            "args": ["${file}"],
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "env": {
                "VIRTUAL_ENV": "${workspaceFolder}/.venv",
                "PATH": "${workspaceFolder}/.venv/bin:${env:PATH}"
            }
        },
        {
            "name": "Python with uv: main.py",
            "type": "debugpy",
            "request": "launch",
            "module": "uv.run",
            "args": ["${workspaceFolder}/main.py"],
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "env": {
                "VIRTUAL_ENV": "${workspaceFolder}/.venv",
                "PATH": "${workspaceFolder}/.venv/bin:${env:PATH}"
            }
        },
        {
            "name": "Python Debugger: QuestionTagger Module",
            "type": "debugpy",
            "request": "launch",
            "module": "src.QuestionTagger.question_tagger", // Specify the module path
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}", // Ensure CWD is the project root
            "env": {
                "VIRTUAL_ENV": "${workspaceFolder}/.venv",
                "PATH": "${workspaceFolder}/.venv/bin:${env:PATH}"
            },
            "args": [
                "--verbose"
                // Add your command-line arguments here as strings
                // For example:
                // "--input-file", "Index/another_index.json",
                // "--output-file", "Index/tagged_output.json",
                // "--dry-run"
            ] 
        }
    ]
}